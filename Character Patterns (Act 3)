#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t-->0){
		int r,c;
		cin>>r>>c;
		for(int i=0;i<(3*r)+1;i++){
			for(int j=0;j<(3*c)+1;j++){
				if(i%3==0){
					cout<<"*";
				}
				else{
					if(j%3==0){
						cout<<"*";
					}
					else{
						cout<<".";
					}
				}
			}
			cout<<endl;
		}
		cout<<endl;
	}
	return 0;
}
