#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t-->0){
		int r,c;
		cin>>r>>c;
		for(int i=0;i<r;i++){
			for(int j=0;j<c;j++){
				if(i%2==0){
					if(j%2==0){
						cout<<"*";
					}
					else{
						cout<<".";
					}
				}
				else{
					if(j%2==0){
						cout<<".";
					}
					else{
						cout<<"*";
					}
				}
			}
			cout<<endl;
		}
		cout<<endl;
	}
	return 0;
}
